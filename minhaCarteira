  <!-- Script JS -->
  <script>
    // Dropdowns
    const dropdowns = [
      { button: "dropdownSaldoBtn", menu: "dropdownSaldo", selected: "selectedPeriodoSaldo" },
      { button: "dropdownInvestBtn", menu: "dropdownInvest", selected: "selectedPeriodoInvest" },
    ];

    dropdowns.forEach(d => {
      const btn = document.getElementById(d.button);
      const menu = document.getElementById(d.menu);
      const selected = document.getElementById(d.selected);

      btn.addEventListener("click", () => menu.classList.toggle("hidden"));

      menu.querySelectorAll("button").forEach(option => {
        option.addEventListener("click", () => {
          selected.textContent = option.dataset.value;
          menu.classList.add("hidden");
        });
      });

      document.addEventListener("click", e => {
        if (!menu.contains(e.target) && !btn.contains(e.target)) {
          menu.classList.add("hidden");
        }
      });
    });

    // BotÃµes principais (exemplo futuro para modais)
    document.getElementById("btnGanhos").addEventListener("click", () => {
      alert("Abrir modal para adicionar ganhos ðŸ’°");
    });
    document.getElementById("btnDespesas").addEventListener("click", () => {
      alert("Abrir modal para adicionar despesas ðŸ’¸");
    });
    document.getElementById("btnInvestir").addEventListener("click", () => {
      alert("Abrir modal para adicionar investimentos ðŸ“ˆ");
    });
  </script>

